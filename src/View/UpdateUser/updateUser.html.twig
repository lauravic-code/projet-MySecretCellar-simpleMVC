{% extends 'layout.html.twig' %}


{% block content %}
	<body>
		<div class="bg-lightPrimary ">

			<div class="bg-lightSecondary pt-4 w-100" style="height: 180px">
				<div style="border-bottom:solid; border-bottom-color:var(--prune)">
					<h1 class="pt-2 ps-2 mt-5 mx-5 text-prune" style="letter-spacing:5px">
						Mettre à jour son profil
					</h1>
				</div>
			</div>
		</div>

		<div class="d-flex  justify-content-center align-items-center" style="height:100vh;">
			<div class="mb-5 p-2 d-flex flex-column  ">
				<div class="text-center ">
					<img src="assets/images/secretCellarLogoregister.svg" width="60%" alt="logo secretCellar">
				</div>


				<div class="container">
					<form class="" method="post" action="updateUser">
						<div class="mb-3">
							<input type="lastname" class="form-control mb-3" id="lastname1" aria-describedby="lastname" placeholder="Nom" value="{{user.lastname}}" name="lastname" required>
						</div>
						<div class="mb-3">
							<input type="firstname" class="form-control" id="firstname1" aria-describedby="firstname" placeholder="Prénom" name="firstname" value="{{user.firstname}}" required>
						</div>
						<div class="mb-3">
							<label for="birthday">Date De naissance:</label><br>
							<input type="date" name="dateOfBirth" class="form-control" id="birthday" placeholder="Date de naissance" value="{{user.dateOfBirth}}" required>
						</div>
						<div class="mb-3">
							<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email" name="email" value="{{user.email}}" required>
						</div>

						<input name="id" type="hidden" value="{{user.id}}">
						<div class="d-flex justify-content-center">
							<button type="submit" id="btnregister" class="btn bg-prune text-lightPrimary mb-3 mt-3">Mettre à jour</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</body>
</body></div></body></div></body>{% endblock %}
