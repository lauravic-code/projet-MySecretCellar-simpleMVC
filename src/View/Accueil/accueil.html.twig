{% extends 'layout.html.twig' %}

{% block title %}Ma cave
{% endblock %}

{% block content %}

	<section class="d-flex flex-column-reverse ">
		<div class=" bg-lightPrimary d-flex flex-column-reverse">
			<div class="container bg-lightSecondary p-4 mb-5">
				<div class="my-5">
					<h2 class="text-prune mb-0">Ma cave en quelques chiffres</h2>
				</div>
				<div class="pb-5 pr-5">
					{% block statsCave %}
						{% include "Accueil/statsCave.html.twig" %}
					{% endblock %}
				</div>

			</div>

			<div id="a-deguster" class="bg-lightPrimary p-4 m-5 my-5 p-3 border-start border-end shadow-lg text-prune">

				<div>
					<h2 class="text-prune">A déguster cette année</h2>
				</div>
				<div style="height: 2px; background-color: var(--prune); width:50%"></div>

				<div
					class="d-flex flex-column flex-sm-row mt-4 p-2">
					{# intégrer image ci dessous#}
					<div class="d-flex justify-content-center">
						<img src="/assets/images/BouteilleSeule.jpg" width="100" height="200"/>
					</div>

					<a href="showWine?id={{randWine['id']}}">
						<div class=" d-flex flex-column mt-5 mt-sm-0 p-sm-5">
							<div class="d-flex flex-column">
								<h3 class="text-prune">{{randWine['domaine']}}</h3>
								
								<p class="text-prune">{{randWine['vintage']}}</p>
							</div>

							<span class="box ">
		                        {% if randWine.rank == "1" %}
								    <i class="bi bi-star text-warning"></i>
								{% endif %}
		                        {% if randWine.rank == "2" %}
								     <i class="bi bi-star-fill text-warning"></i>
								     <i class="bi bi-star-fill text-warning"></i>
								{% endif %}
		                        {% if randWine.rank == "3" %}
								     <i class="bi bi-star-fill text-warning"></i>
								     <i  class="bi bi-star-fill text-warning"></i>
								     <i class="bi bi-star-fill text-warning"></i>
								{% endif %}
		                        {% if randWine.rank == "4" %}
								     <i class="bi bi-star-fill text-warning"></i>
								     <i  class="bi bi-star-fill text-warning"></i>
									 <i class="bi bi-star-fill text-warning"></i>
									 <i class="bi bi-star-fill text-warning"></i>
							    {% endif %}
		                        {% if randWine.rank == "5" %}
								     <i class="bi bi-star-fill text-warning"></i>
								     <i  class="bi bi-star-fill text-warning"></i>
									 <i class="bi bi-star-fill text-warning"></i>
									 <i class="bi bi-star-fill text-warning"></i>
									 <i class="bi bi-star-fill text-warning"></i>
								{% endif %}
	                        </span>
							<div class="flex text-prune">
								<p>{{randWine['description']}}</p>
								{# intégrer component stock #}

								<div class="d-flex justify-content-end mt-3">
									<span class=" rounded p-2 text-bg-prune">Stock : {{randWine['stock']}}</span>
								</div>
							</div>
						</div>
					</a>
				</div>
			</div>

		</div>
	</div>
	<div class="bg-lightSecondary pt-4 w-100" style="height: 180px">
		<div style="border-bottom:solid; border-bottom-color:var(--prune)">
			<h1 class="pt-2 ps-2 mt-5 mx-5 text-prune" style="letter-spacing:5px">
				My Secret Cellar
			</h1>
		</div>
	</div>
</section>{% endblock %}
